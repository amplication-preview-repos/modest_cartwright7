datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Comment {
  author              String?
  commentAuthor       String?
  commentContent      String?
  commentCreationDate DateTime?
  content             String?
  createdAt           DateTime  @default(now())
  id                  String    @id @default(cuid())
  post                Post?     @relation(fields: [postId], references: [id])
  postId              String?
  relatedPost         String?
  updatedAt           DateTime  @updatedAt
}

model Post {
  author           String?
  blogAuthor       String?
  blogContent      String?
  blogCreationDate DateTime?
  blogTitle        String?
  comments         Comment[]
  content          String?
  createdAt        DateTime  @default(now())
  creationDate     DateTime?
  id               String    @id @default(cuid())
  title            String?
  updatedAt        DateTime  @updatedAt
}
